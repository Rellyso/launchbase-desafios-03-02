{% extends 'layout.njk' %}

    {% block head %}
        <title>courses</title>
    {% endblock %}

    {% block bodyId %}
        <body id="courses">
    {% endblock %}
    
    {% block content %}
        <div id="wrapper">
            <h1>Cursos</h1>
        </div>

        
        <section class="cards">
            {% for course in courses %}
            <div class="card" id="{{course.name}}">
                <span class="card__number">
                        {{course.id}}
                    </span>
        
                    <img src="{{course.img}}" alt="imagem do curso {{course.name}}">
        
        
                    <div class="card__content">
                        <p class="card__info">{{course.info}}</p>
                        <div class="card__desc">
                            <p class="card__modules">{{course.modules}}</p>
                            <p class="price">{{course.price}}</p>
                        </div>
                    </div>
            </div>
            {% endfor %}
        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">
                        close
                    </i>
                </a>
                <a class="max-modal">
                    <i id="minimize" class="material-icons">
                        filter_none
                    </i>

                    <i id="maximize" class="material-icons active">
                        crop_square
                    </i>
                </a>
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>

        <script src="/cursos.js"></script>
    {% endblock %}
